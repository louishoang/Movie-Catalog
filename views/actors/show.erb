Name : <%= @person[0]["name"] %>

<table class="table table-striped" style="margin-top: 30px">
  <tr>
    <th>Movies</th>
    <th>Roles</th>
  </tr>
  <% @person.each do |p| %>
    <tr>
      <td><a href="/movies/<%= p["movie_id"] %>"><%= p["title"]%></a></td>
      <td><%= p["character"]%></td>
    </tr>
  <% end %>

</table>
